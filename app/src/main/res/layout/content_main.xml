<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.example.crist.mycalculatorapp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/textView" />

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="499dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="6dp">

        <Button
            android:id="@+id/num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="150dp"
            android:text="1" />

        <Button
            android:id="@+id/num2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/num1"
            android:layout_alignBottom="@+id/num1"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="1dp"
            android:layout_toRightOf="@+id/num1"
            android:text="2" />

        <Button
            android:id="@+id/num3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/num2"
            android:layout_alignBottom="@+id/num2"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="1dp"
            android:layout_toEndOf="@+id/num2"
            android:layout_toRightOf="@+id/num2"
            android:text="3" />

        <Button
            android:id="@+id/mult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/num3"
            android:layout_alignBottom="@+id/num3"
            android:layout_toEndOf="@+id/num3"
            android:layout_toRightOf="@+id/num3"
            android:text="*" />

        <Button
            android:id="@+id/num4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/num1"
            android:layout_alignStart="@+id/num1"
            android:layout_below="@+id/num1"
            android:text="4" />

        <Button
            android:id="@+id/num5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/num4"
            android:layout_alignBottom="@+id/num4"
            android:layout_alignLeft="@+id/num2"
            android:layout_alignStart="@+id/num2"
            android:text="5" />

        <Button
            android:id="@+id/num6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/num5"
            android:layout_alignBottom="@+id/num5"
            android:layout_alignLeft="@+id/num3"
            android:layout_alignStart="@+id/num3"
            android:text="6" />

        <Button
            android:id="@+id/subt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_above="@+id/num2"
            android:layout_toRightOf="@+id/num2"
            android:layout_toEndOf="@+id/num2" />

        <Button
            android:id="@+id/num7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/num4"
            android:layout_alignStart="@+id/num4"
            android:layout_below="@+id/num4"
            android:text="7" />

        <Button
            android:id="@+id/num8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/num5"
            android:layout_alignStart="@+id/num5"
            android:layout_below="@+id/num5"
            android:text="8" />

        <Button
            android:id="@+id/num9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/num6"
            android:layout_alignStart="@+id/num6"
            android:layout_below="@+id/num6"
            android:text="9" />

        <Button
            android:id="@+id/decimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/num9"
            android:layout_alignStart="@+id/num9"
            android:layout_below="@+id/num9"
            android:text="." />

        <Button
            android:id="@+id/divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/mult"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="/" />

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/clear"
            android:layout_alignBottom="@+id/clear"
            android:layout_toEndOf="@+id/num1"
            android:layout_toRightOf="@+id/num1"
            android:text="+" />

        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:layout_above="@+id/num2"
            android:layout_toLeftOf="@+id/num5"
            android:layout_toStartOf="@+id/num5" />

        <Button
            android:id="@+id/num0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/num7"
            android:layout_alignStart="@+id/num7"
            android:layout_below="@+id/num7"
            android:layout_toLeftOf="@+id/num9"
            android:layout_toStartOf="@+id/num9"
            android:text="0" />

        <Button
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/decimal"
            android:layout_below="@+id/mult"
            android:layout_toEndOf="@+id/num3"
            android:layout_toRightOf="@+id/num3"
            android:text="=" />

        <EditText
            android:id="@+id/textField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/subt"
            android:layout_alignLeft="@+id/clear"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/clear"
            android:ems="10"
            android:inputType="numberSigned" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>